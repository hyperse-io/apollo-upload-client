{
  "name": "@hyperse/apollo-upload-client",
  "version": "1.0.0",
  "description": "A terminating Apollo Link for Apollo Client that handles GraphQL file uploads using multipart requests. ",
  "keywords": [
    "hyperse",
    "react",
    "graphql",
    "npm",
    "node",
    "react-native",
    "apollo",
    "apollo-client",
    "file upload",
    "multipart/form-data"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/hyperse-io/apollo-upload-client.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./extractFiles": {
      "import": "./dist/extractFiles/index.js",
      "types": "./dist/extractFiles/index.d.ts",
      "default": "./dist/extractFiles/index.js"
    },
    "./createUploadLink": {
      "import": "./dist/createUploadLink/index.js",
      "types": "./dist/createUploadLink/index.d.ts",
      "default": "./dist/createUploadLink/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "tsup",
    "next": "next build",
    "lint": "eslint .",
    "lint-fix": "yarn lint --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint-staged-files": "lint-staged --allow-empty",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "cz": "cz",
    "prepare": " husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "is-plain-obj": "^4.1.0"
  },
  "devDependencies": {
    "@apollo/client": "^4.0.0",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@hyperse/eslint-config-hyperse": "^1.4.7",
    "@types/node": "^24.3.0",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.34.0",
    "graphql": "^16.11.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.8.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@apollo/client": ">=4.0.0",
    "graphql": ">=16.11.0"
  },
  "packageManager": "yarn@4.9.3",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
